{
  "name": "@prepair/require-extension-vue",
  "version": "4.1.0",
  "description": "Simple vue file support for node. Mainly for testing purposes.",
  "main": "./src/index.js",
  "exports": "./src/index.js",
  "type": "commonjs",
  "scripts": {
    "lint": "eslint src --ext .js,.ts,.vue",
    "lint:all": "eslint src test --ext .js,.ts,.vue",
    "test": "cross-env NODE_ENV=test mocha",
    "test:watch": "npm run test -- --watch",
    "prerelease": "npm run lint && npm run test",
    "release": "git checkout master && git pull --rebase origin master && standard-version && git push --follow-tags origin master && npm publish --access=public",
    "prepare": "husky"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "vueIndentScriptAndStyle": false,
    "endOfLine": "lf"
  },
  "mocha": {
    "require": "test/setup.js",
    "spec": "test/**/*.spec.js",
    "timeout": 4000,
    "color": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier",
      "eslint"
    ]
  },
  "engines": {
    "node": ">=18.18.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prepair/require-extension-vue.git"
  },
  "author": "Zoltan Feher <zf_common@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prepair/require-extension-vue/issues"
  },
  "homepage": "https://github.com/prepair/require-extension-vue#readme",
  "keywords": [
    "vue",
    "require",
    "extension",
    "hook",
    "node"
  ],
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@tsconfig/node18": "^18.2.4",
    "@types/babel__core": "^7.20.5",
    "@types/convert-source-map": "^2.0.3",
    "@types/find-cache-dir": "^3.2.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^18.19.31",
    "@types/ramda": "^0.29.12",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "chai": "^4.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-mocha": "^10.4.2",
    "eslint-plugin-n": "^17.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unicorn": "^52.0.0",
    "eslint-plugin-vue": "^9.25.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mocha": "^10.4.0",
    "prettier": "^3.2.5",
    "sinon": "^17.0.1",
    "standard-version": "^9.5.0",
    "typescript": "^5.4.5",
    "vue": "^2.7.16"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "convert-source-map": "^2.0.0",
    "find-cache-dir": "^3.3.2",
    "fs-extra": "^11.2.0",
    "loglevel": "^1.9.1",
    "merge-source-map": "^1.1.0",
    "pirates": "^4.0.6",
    "ramda": "^0.29.1",
    "source-map": "^0.7.4",
    "source-map-support": "^0.5.21"
  },
  "peerDependencies": {
    "@babel/core": "7.x",
    "@babel/preset-env": "7.x",
    "vue": "^2.7.0"
  },
  "peerDependenciesMeta": {
    "@babel/core": {
      "optional": true
    },
    "@babel/preset-env": {
      "optional": true
    }
  }
}
