{
  "name": "@prepair/require-extension-vue",
  "version": "3.0.1",
  "description": "Simple vue file support for node. Mainly for testing purposes.",
  "main": "./src/index.js",
  "exports": "./src/index.js",
  "type": "commonjs",
  "scripts": {
    "lint": "eslint src",
    "test": "cross-env NODE_ENV=test mocha",
    "test:watch": "npm run test -- --watch",
    "prerelease": "npm run lint && npm run test",
    "release": "git checkout master && git pull --rebase origin master && standard-version && git push --follow-tags origin master && npm publish --access=public",
    "prepare": "husky install"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "vueIndentScriptAndStyle": false,
    "endOfLine": "lf"
  },
  "mocha": {
    "require": "test/setup.js",
    "spec": "test/**/*.spec.js",
    "timeout": 4000,
    "color": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier",
      "eslint"
    ]
  },
  "engines": {
    "node": ">=14.18.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prepair/require-extension-vue.git"
  },
  "author": "Zoltan Feher <zf_common@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prepair/require-extension-vue/issues"
  },
  "homepage": "https://github.com/prepair/require-extension-vue#readme",
  "keywords": [
    "vue",
    "require",
    "extension",
    "hook",
    "node"
  ],
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "chai": "^4.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-mocha": "^10.4.2",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unicorn": "^43.0.2",
    "eslint-plugin-vue": "^9.25.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "mocha": "^10.4.0",
    "prettier": "^3.2.5",
    "sinon": "^17.0.1",
    "standard-version": "^9.5.0",
    "vue": "^2.7.16"
  },
  "dependencies": {
    "@vue/component-compiler-utils": "^3.3.0",
    "ajv": "^8.12.0",
    "convert-source-map": "^2.0.0",
    "find-cache-dir": "^3.3.2",
    "fs-extra": "^11.2.0",
    "loglevel": "^1.9.1",
    "pirates": "^4.0.6",
    "ramda": "^0.28.0",
    "source-map": "^0.7.4",
    "source-map-support": "^0.5.21"
  },
  "peerDependencies": {
    "@babel/core": "7.x",
    "@babel/preset-env": "7.x"
  },
  "peerDependenciesMeta": {
    "@babel/core": {
      "optional": true
    },
    "@babel/preset-env": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "vue-template-compiler": {
      "optional": true
    }
  }
}
