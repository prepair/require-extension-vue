{
  "name": "@prepair/require-extension-vue",
  "version": "1.0.3",
  "description": "Simple vue file support for node. Mainly for testing purposes.",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src",
    "test": "mocha",
    "test:watch": "npm run test -- --watch",
    "prerelease": "npm run lint && npm run test",
    "release": "git checkout master && git pull --rebase origin master && standard-version && git push --follow-tags origin master && npm publish --access=public"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "vueIndentScriptAndStyle": false,
    "endOfLine": "lf"
  },
  "mocha": {
    "file": "test/setup.js",
    "spec": "test/**/*.spec.js",
    "timeout": 4000,
    "color": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier",
      "eslint"
    ]
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prepair/require-extension-vue.git"
  },
  "author": "Zoltan Feher <zf_common@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prepair/require-extension-vue/issues"
  },
  "homepage": "https://github.com/prepair/require-extension-vue#readme",
  "keywords": [
    "vue",
    "require",
    "extension",
    "hook",
    "node"
  ],
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-config-semistandard": "^15.0.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-unicorn": "^23.0.0",
    "eslint-plugin-vue": "^7.2.0",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "sinon": "^9.2.1",
    "standard-version": "^9.0.0",
    "vue-template-compiler": "^2.6.12"
  },
  "dependencies": {
    "@vue/component-compiler-utils": "^3.2.0",
    "ajv": "^6.12.6",
    "find-cache-dir": "^3.3.1",
    "fs-extra": "^9.0.1",
    "loglevel": "^1.7.1",
    "pirates": "^4.0.1",
    "ramda": "^0.27.1",
    "source-map": "^0.7.3",
    "source-map-support": "^0.5.19"
  },
  "peerDependencies": {
    "@babel/core": "7.x",
    "@babel/preset-env": "7.x",
    "vue-template-compiler": "2.x"
  },
  "optionalDependencies": {
    "@babel/core": "7.x",
    "@babel/preset-env": "7.x"
  }
}
